{% verbatim %}
<script type="text/x-handlebars" id="pages">
    <ul class="breadcrumbs">
        <li>{{#link-to 'dashboard'}}Dashboard{{/link-to}}</li>
        <li>{{#link-to 'content'}}Content{{/link-to}}</li>
        <li class="current">Pages</li>
    </ul>

    <div class="row">
        <div class="medium-3 columns">
            <ul>
                {{#each}}
                    <li>
                        {{#link-to 'page' this}}
                            <h5>{{title}}</h5>
                            <p>{{summary_text}}</p>
                        {{/link-to}}
                    </li>
                {{/each}}
            </ul>
        </div>

        <div class="medium-9 columns">
            {{outlet}}
        </div>
    </div>
</script>

<script type="text/x-handlebars" id="pages/index">
    <div class="panel">
        Select a page 
    </div>
</script>
{% endverbatim %}

<script type="text/x-handlebars" id="page">
    <div class="panel">
        {% include 'admin_templates/edit.twig' %}
    </div>
</script>